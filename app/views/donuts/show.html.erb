<div class="container">
  <div class="row row-cols-2 m-5 mx-auto">
      <div class="card big-white-container ml-5" style="width: 18rem;">
        <div class="card-header">
            <h5><strong><%= @donut.name%></strong></h5>
          </div>
        <%= cl_image_tag(@donut.photo.key, width: 600, height: 600, crop: :fill , alt: @donut.name, class:"card-img-top rounded mx-auto d-block img-thumbnail" ) %>
        <div class="card-body">
          <h5 class="card-title"><strong>Sold by: </strong></h5>
          <p class="card-text"><%= @user.username%></p>
        </div>
        <div class="card-body">
          <h5 class="card-title"><strong>Description: </strong></h5>
          <p class="card-text"><%= @donut.description%></p>
        </div>
        <div class="card-body">
          <h5 class="card-title"><strong>Price:  </strong></h5>
          <p class="card-text">Â£<%= @donut.price%> </p>
        </div>
        <div class="card-body">
          <h5 class="card-title"><strong>Rating : </strong></h5>
          <p class="card-text"><i class="fa-solid fa-star"><%= @donut.rating>0 ? @donut.rating : "N/A" %></i></p>
        </div>
        <div class="card-body">
          <button type="button" class="btn btn-outline-success btn-lg"><%= link_to "Order Donut", new_donut_order_path(@donut) %></button>
        </div>
      </div>
      <div class="card big-white-container mr-5" style="width: 18rem;">
        <h3><strong>Reviews</strong></h3>
          <% @donut.reviews.each do |review| %>
                <div class="card" >
                  <div class="card-body">
                    <h5 class="card-title"><strong>Review </strong></h5>
                    <p class="card-text"><%= review.comment %></p>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><strong>Rating: </strong></h5>
                    <p class="card-text"><small>
                        <% count = 0 %>
                        <% 5.times do %>
                          <% if review.rating > count %>
                            <i class="fa-solid fa-star"></i>
                          <% else %>
                            <i class="fa-regular fa-star"></i>
                          <% end %>
                          <% count += 1 %>
                        <% end %>
                      </small> </p>
                  </div>
                </div>
          <% end %>
      </div>
  </div>

  <button type="button" class="btn btn-outline-warning btn-lg"><%= link_to "Back to Donuts", donuts_path %></button>

</div>
