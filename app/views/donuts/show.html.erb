<div class="container">
  <div class="row row-cols-2">
      <div class="card" style="width: 18rem;">
        <div class="card-img-top">
          <%= cl_image_tag(@donut.photo.key, width: 200, height: 300, crop: :fit , alt: @donut.name ) %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><strong><%= @donut.name%></strong></h5>
        </div>
        <div class="card-body">
          <h5 class="card-title"><strong>Description: </strong></h5>
          <p class="card-text"><%= @donut.description%></p>
        </div>
        <div class="card-body">
          <h5 class="card-title"><strong>Price:  </strong></h5>
          <p class="card-text">Â£<%= @donut.price%> </p>
        </div>
        <div class="card-body">
          <h5 class="card-title"><strong>Rating : </strong></h5>
          <p class="card-text"><i class="fa-solid fa-star"></i></p>
        </div>
      </div>
      <div class="card" style="width: 18rem;">
        <div>
          <% @donut.reviews.each do |review| %>
            <%= review.rating %>
            <%= review.comment %>
          <% end %>
        </div>
      </div>

  </div>
  <button type="button" class="btn btn-light"><%= link_to "Back to Donuts", donuts_path %></button>
</div>
