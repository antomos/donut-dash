<div class="modal fade" id="new_movie_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add a donut to your <%= order.id %> order</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        </button>
      </div>

      <%= simple_form_for [order, donut] do |f| %>
        <div class="modal-body">
          <%= f.association :donut, collection: Donut.all.order(:name), prompt: "Select a donut", input_html: { data: { controller: "tom-select" } } %>
          <%= f.integer :quantity %>
          <%= f.date :requested_date %>
          <%= f.time :requested_time%>
        </div>
        <div class="modal-footer">
          <%= f.submit "Add order", class: "btn btn-flat" %>
          <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Back</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
