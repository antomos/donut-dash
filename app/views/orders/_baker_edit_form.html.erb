<%= simple_form_for [donut, order], data: { controller: 'flatpickr' } do |f| %>
  <%= f.select :status, options_for_select([["Pending", "pending"], ["Accepted", "accepted"]]) %>
  <% if order.status == "accepted" || order.complete %>
    <%= f.input :complete %>
  <% end %>
  <%= f.submit class: "btn btn-success" %>
<% end %>
