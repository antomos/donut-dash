<h1 id="home-page-title">We are home to the most delicious donuts you've ever tasted</h1>
<div class="container m-5 mx-auto big-white-container">
    <div class="d-flex justify-content-center p-5">
      <img class="img-fluid w-25" src="https://pyxis.nymag.com/v1/imgs/a22/179/b205a78510315d932427143ad6b6fb5694-03-homer-simpson-doughnuts.2x.rhorizontal.w700.jpg" alt="Homer eating donut">
    </div>
    <div class="rated-donuts-sentence d-flex justify-content-center p-3">
      <p> Check out our top rated donuts:</p>
    </div>
    <div class="justify-content-around d-flex">
        <p>
          <%  @top_donuts.each do |donut| %>
            <div class="card" style="width: 18rem">
              <div class="card-img-top p-3">
                <%= link_to donut_path(donut) do %>
                  <%= cl_image_tag(donut.photo.key, width: 150, height: 250, crop: :fit , alt: donut.name ) %>
                <% end %>
              </div>
              <div class="card-body">
                <h5 class="card-title"><strong><%= donut.name%></strong> </h5>
              </div>
              <div>
                <p class="card-text"> <i class="fa-solid fa-star"><%= donut.rating>0 ? donut.rating : "N/A" %></i></p>
              </div>
              <div>
                <p class="card-text">Â£ <%= donut.price%></p>
              </div>
              <div>
                <p class="card-text"><%= donut.available? ? "Available" : "Not available" %></p>
              </div>
            </div>
          <% end %>
        </p>
      </div>
  </div>
</div>
