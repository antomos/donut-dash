<div class='container'>
  <h1>Account</h1>
  <p><%= current_user.email %></p>
  <p><%= current_user.first_name %></p>
  <p><%= link_to "Edit Account", edit_user_registration_path %></p>
  <% current_user.orders.each do |order| %>
    <p><%= order.id %></p>
  <% end %>
  <h1>------------</h1>
  <% current_user.donuts.each do |donut| %>
    <% donut.orders.each do |order| %>
      <p><%= order.id %></p>
    <% end %>
  <% end %>
</div>
